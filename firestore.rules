rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Missed Questions Collection
    match /missedQuestions/{questionId} {
      // Users can read their own missed questions
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can create their own missed questions
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own missed questions
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own missed questions
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Archived Missed Questions Collection
    match /archivedMissedQuestions/{archiveId} {
      // Users can read their own archived questions
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can create their own archived questions
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own archived questions (for unarchiving)
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Category Overrides Collection
    match /categoryOverrides/{overrideId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Excluded Questions Collection
    match /excludedQuestions/{excludedId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // User Preferences Collection
    match /userPreferences/{userId} {
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow write: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Scoreboards Collection
    match /scoreboards/{scoreId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Trophy Cases Collection
    match /trophy_cases/{userId} {
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow write: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Flashcard Completions Collection
    match /flashcard_completions/{completionId} {
      // Allow reading/writing specific documents by ID (userId_deckId format)
      allow read, write: if isAuthenticated() && 
        completionId.split('_')[0] == request.auth.uid;
      
      // Allow querying the collection to list user's own completions
      allow list: if isAuthenticated();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

